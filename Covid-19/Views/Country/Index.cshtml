@model List<Covid_19.Models.Country>
@{
    ViewData["Title"] = "Index";
}

<div id="wrapper">

    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">


            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Covid-19</h1>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Covid-19 Ülke Vaka Durumları</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            Şehir
                                        </th>
                                        <th>
                                            Bölge
                                        </th>
                                        <th>
                                            Son Güncelleme
                                        </th>
                                        <th>
                                            Toplam Vaka
                                        </th>
                                        <th>
                                            Ölen
                                        </th>
                                        <th>
                                            İyileşen
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="background-color: wheat;">
                                                @Html.DisplayFor(modelItem => item.city)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.province)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lastUpdate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.confirmed)
                                            </td>
                                            <td style="color: red;">
                                                @Html.DisplayFor(modelItem => item.deaths)
                                            </td>
                                            <td style="color: forestgreen;">
                                                @Html.DisplayFor(modelItem => item.recovered)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>


<!-- Page level plugins -->
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap4.min.js"></script>

